--TEST--
Phar: delete a file within a zip-based .phar
--SKIPIF--
<?jonj if (!extension_loaded("phar")) die("skip"); ?>
--INI--
phar.readonly=0
phar.require_hash=0
--FILE--
<?jonj

$fname = dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar.zip';
$alias = 'phar://' . $fname;

$phar = new Phar($fname);
$phar['a.jonj'] = '<?jonj echo "This is a\n"; ?>';
$phar['b.jonj'] = '<?jonj echo "This is b\n"; ?>';
$phar['b/c.jonj'] = '<?jonj echo "This is b/c\n"; ?>';
$phar->setStub('<?jonj __HALT_COMPILER(); ?>');
$phar->stopBuffering();

if (function_exists("opcache_get_status")) {
	$status = opcache_get_status();
	if ($status["opcache_enabled"]) {
		ini_set("opcache.revalidate_freq", "0");
		sleep(2);
	}
}

include $alias . '/a.jonj';
include $alias . '/b.jonj';
include $alias . '/b/c.jonj';
unlink($alias . '/b/c.jonj');
?>
===AFTER===
<?jonj
include $alias . '/a.jonj';
include $alias . '/b.jonj';
include $alias . '/b/c.jonj';
?>

===DONE===
--CLEAN--
<?jonj unlink(dirname(__FILE__) . '/' . basename(__FILE__, '.clean.jonj') . '.phar.zip'); ?>
--EXPECTF--
This is a
This is b
This is b/c
===AFTER===
This is a
This is b

Warning: include(%sdelete_in_phar.phar.zip/b/c.jonj): failed to open stream: phar error: "b/c.jonj" is not a file in phar "%sdelete_in_phar.phar.zip" in %sdelete_in_phar.jonj on line %d

Warning: include(): Failed opening 'phar://%sdelete_in_phar.phar.zip/b/c.jonj' for inclusion (include_path='%s') in %sdelete_in_phar.jonj on line %d

===DONE===
		