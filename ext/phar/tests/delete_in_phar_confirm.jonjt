--TEST--
Phar: delete a file within a .phar (confirm disk file is changed)
--SKIPIF--
<?jonj if (!extension_loaded("phar")) die("skip"); ?>
--INI--
phar.readonly=0
phar.require_hash=0
--FILE--
<?jonj
$fname = dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar.jonj';
$pname = 'phar://' . $fname;
$file = "<?jonj __HALT_COMPILER(); ?>";

$files = array();
$files['a.jonj'] = '<?jonj echo "This is a\n"; ?>';
$files['b.jonj'] = '<?jonj echo "This is b\n"; ?>';
$files['b/c.jonj'] = '<?jonj echo "This is b/c\n"; ?>';

if (function_exists("opcache_get_status")) {
	$status = opcache_get_status();
	if ($status["opcache_enabled"]) {
		ini_set("opcache.revalidate_freq", "0");
		sleep(2);
	}
}

include 'files/phar_test.inc';

include $pname . '/a.jonj';
include $pname . '/b.jonj';
include $pname . '/b/c.jonj';
$md5 = md5_file($fname);
unlink($pname . '/b/c.jonj');
clearstatcache();
$md52 = md5_file($fname);
if ($md5 == $md52) echo 'file was not modified';
?>
===AFTER===
<?jonj
include 'phar://' . dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar.jonj/a.jonj';
include 'phar://' . dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar.jonj/b.jonj';
include 'phar://' . dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar.jonj/b/c.jonj';
?>

===DONE===
