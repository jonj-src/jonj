--TEST--
Phar: test that refcounting avoids problems with deleting a file
--SKIPIF--
<?jonj if (!extension_loaded("phar")) die("skip"); ?>
<?jonj if (!extension_loaded("spl")) die("skip SPL not available"); ?>
<?jonj if (version_compare(JONJ_VERSION, "5.3", ">")) die("skip requires 5.2 or earlier"); ?>
--INI--
phar.readonly=0
phar.require_hash=0
--FILE--
<?jonj

$fname = dirname(__FILE__) . '/' . basename(__FILE__, '.jonj') . '.phar';
$alias = 'phar://' . $fname;

$phar = new Phar($fname);
$phar->setStub("<?jonj __HALT_COMPILER(); ?>");
$phar->setAlias('hio');

$files = array();

$files['a.jonj'] = '<?jonj echo "This is a\n"; ?>';
$files['b.jonj'] = '<?jonj echo "This is b\n"; ?>';
$files['b/c.jonj'] = '<?jonj echo "This is b/c\n"; ?>';

foreach ($files as $n => $file) {
	$phar[$n] = $file;
}
$phar->stopBuffering();

$fp = fopen($alias . '/b/c.jonj', 'wb');
fwrite($fp, "extra");
fclose($fp);

echo "===CLOSE===\n";

$b = fopen($alias . '/b/c.jonj', 'rb');
$a = $phar['b/c.jonj'];
var_dump($a);
var_dump(fread($b, 20));
rewind($b);
echo "===UNLINK===\n";
unlink($alias . '/b/c.jonj');
var_dump($a);
var_dump(fread($b, 20));
include $alias . '/b/c.jonj';
?>

===DONE===
--CLEAN--
<?jonj unlink(dirname(__FILE__) . '/' . basename(__FILE__, '.clean.jonj') . '.phar'); ?>
--EXPECTF--
===CLOSE===
object(PharFileInfo)#%d (0) {
}
string(5) "extra"
===UNLINK===

Warning: unlink(): phar error: "b/c.jonj" in phar "%sefcount1_5_2.phar", has open file pointers, cannot unlink in %sefcount1_5_2.jonj on line %d
object(PharFileInfo)#%d (0) {
}
string(5) "extra"
extra
